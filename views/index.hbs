<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{searchTerm}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="text-center mt-4">
  <form action="/restaurants/{{restaurant.id}}" style="display: inline;"><button
      type="submit"
      class="btn btn-outline-secondary btn-sm"
    >新增餐廳</button></form></div>

{{#if restaurants}}

  <!-- restaurant list -->
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurants as |restaurant|}}
            <div>
              <a href="/restaurants/{{restaurant.id}}" class="text-secondary">
                <div class="card mb-3">
                  <img
                    class="card-img-top"
                    src="{{restaurant.image}}"
                    alt="{{restaurant.name}}"
                  />
                  <div class="card-body p-3">
                    <h6 class="card-title mb-1">{{restaurant.name}}</h6>

                    <div class="restaurant-category mb-1">
                      <i class="fas fa-utensils pr-2"></i>
                      {{restaurant.category}}
                    </div>

                    <span
                      class="badge rounded-pill bg-danger font-weight-normal"
                    >
                      {{restaurant.rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>

                  </div>
                </div>
              </a>
              <div class="text-end mb-2">
                <form
                  action="/restaurants/{{restaurant.id}}/edit"
                  style="display: inline;"
                ><button
                    type="submit"
                    class="btn btn-outline-secondary btn-sm"
                  >編輯</button></form>
                <form
                  action="/restaurants/{{restaurant.id}}"
                  style="display: inline;"
                ><button
                    type="submit"
                    class="btn btn-outline-secondary btn-sm"
                  >詳細資料</button></form>
                <button
                  type="button"
                  class="btn btn-outline-danger btn-sm"
                >刪除</button>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>
  </div>

{{else}}
  <h3 class="text-center mt-5">查無相關資料，請重新輸入</h3>
{{/if}}