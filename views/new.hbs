{{> logout}}
<form action="/restaurants" method="POST">
  <div class="mb-1 restaurant-show-title">
    <input
      type="text"
      name="name"
      placeholder="請輸入餐廳名稱"
      required
    /></div>

 {{> message}}

  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-star pr-2"></i>
          餐廳評分：
        </span>
        <input
          type="number"
          name="rating"
          placeholder="ex: 4.7 (最高 5 分)"
          max="5"
          step="0.1"
          min="0"
          required
        />
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          餐廳英文名稱：
        </span>
        <input
          type="text"
          name="name_en"
          placeholder="ex: Gusto Pizza"
          required
        />
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        <select name="category" id="create-category" required>
        <option value="中東料理">中東料理</option>
        <option value="日本料理">日本料理</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="美式">美式</option>
        <option value="酒吧">酒吧</option>
        <option value="咖啡">咖啡</option>
        </select>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        <input
          type="text"
          name="location"
          placeholder="ex: 110 台北市信義區忠孝東路五段 139 號 2 樓"
          size="40"
          required
        />
        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        <span class="text-secondary">google map link</span>
        <input
          type="link"
          name="google_map"
          placeholder="請貼上google map 連結"
          size="40"
          required
        />
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        <input
          type="tel"
          name="phone"
          placeholder="ex: 02 2756 7788"
          required
        />
      </p>

      <p class="mb-1">
        <input
          type="text"
          name="description"
          placeholder="請輸入餐廳介紹"
          size="100"
          required
        />
      </p>

      <p class="mb-1"><span class="text-secondary">
          <i class="fas fa-solid fa-image"></i>
          照片連結：
          <input
            type="text"
            name="image"
            placeholder="請貼上照片連結"
            size="100"
            required
          />
        </span>
      </p>

    </div>
  </div>
  <div class="text-center mb-3"><button
      type="submit"
      class="btn btn-outline-secondary btn-sm"
    >儲存</button></div>
</form>

 